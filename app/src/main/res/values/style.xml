<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Custom Button -->
    <style name="Widget.BusButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/bus_yellow</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- TextInput (EditText) -->
    <style name="Widget.BusTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/bus_yellow</item>
        <item name="hintTextColor">@color/bus_light_grey</item>
        <item name="android:textColor">@color/bus_grey</item>
    </style>

    <!-- Headings -->
    <style name="TextAppearance.BusHeading" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/bus_grey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Normal text -->
    <style name="TextAppearance.BusBody" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/bus_light_grey</item>
    </style>

</resources>
